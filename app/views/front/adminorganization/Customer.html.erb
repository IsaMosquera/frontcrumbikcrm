  <form role="form" id="form" data-toggle="validator">
            <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Gestión de Clientes</h3>
          </div>
          <div class="panel-body">
            En este panel podrá agregar, modificar o eliminar las clientes del CRM.

    <div id="ModalNewCustomer" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- === INICIO PANEL DE EDICIÓN === -->   
        <div class="panel panel-primary" align="center">
             <div class="panel-heading">
                <h2 class="text-center"> Datos del Cliente </h2>
              </div>   
              <div class="panel-body">

                     <!-- === INPUTS TXT === -->  
             <div class="form-group col-md-6">
                <label for="ejemplo_email_1">Nombre</label>
                <input type="text" class="form-control" id="txtNombre" placeholder="Nombre del Cliente" name="Nombre">
              </div>

               <div class="form-group col-md-6">
                 <label for="exampleInputEmail1">Apellido</label>
                 <input type="text" class="form-control" id="txtApellido" placeholder="Apellido del Cliente" name="Apellido">
               </div>
               <div class="form-group col-md-6">
                 <label for="exampleInputEmail1">Cédula</label>
                 <input type="text" class="form-control" id="txtCedula" placeholder="Cedula del Cliente" name="Cedula">
               </div>

              <div class="form-group col-md-6 required">
                <label > Dirección</label>
                <input class="form-control" id="txtDireccion" type="text" name="txtDireccion"
                        placeholder="Direccion">
              </div>
              <div class="form-group col-md-6">
                <label > Pais</label>
                  <select id="cmbPais" class="form-control" name="Pais">
                      <option>Seleccione su Pais</option>
                      <option>Venezuela</option>
                      <option>Caracas</option>
                      <option>Valencia</option>
                      <option>Maracaibo</option>
                      <option>Barinas</option>
                      <option>Mérida</option>
                  </select>
              </div>

              <div class="form-group col-md-6">
                <label> Estado</label>
                  <select id="cmbEstado" class="form-control" name="Estado">
                      <option>Seleccione su Estado</option>
                      <option>Lara</option>
                  </select>
              </div>

               <div class="form-group col-md-6">
                <label > Ciudad</label>
                  <select id="cmbCiudad" class="form-control" name="Ciudad">
                      <option>Seleccione su Ciudad</option>
                      <option>Venezuela</option>
                      <option>Caracas</option>
                      <option>Valencia</option>
                      <option>Maracaibo</option>
                      <option>Barinas</option>
                      <option>Mérida</option>
                  </select>
              </div>

              <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="txtEmail" placeholder="Correo Electrónico" name="Email">
               </div>

              <div class="form-group col-md-6">
                 <label > Telefono</label>
                  <input class="form-control" id="txtTelefono" type="tel" placeholder="Teléfono" name="Telefono">
             </div>

              <div class="form-group col-md-6">
                 <label > Telefono Celular</label>
                  <input class="form-control" id="txtTelefonoCelular" type="tel" name="TelefonoCelular" 
                          placeholder="Teléfono celular del cliente">
             </div>     
             <div class="form-group col-md-6">
                <label > Sexo&nbsp;</label>
                  <select id="cmbSexo" class="form-control">
                      <option>---------</option>
                      <option>Femenino</option>
                      <option>Masculino</option>
                  </select>
             </div>

             <div class="form-group col-md-6">
               <label > Fecha de Nacimiento</label>
               <input class="form-control" id="txtFechaNacimiento" type="date" placeholder="Fecha de Nacimiento" name="FechaNacimiento">
             </div>

             <div class="form-group col-md-6">
                <label > Tipo de Cliente</label>
                  <select id="cmbTipoCliente" class="form-control" name="TipoCliente">
                      <option>---------</option>
                      <option>VIP</option>
                      <option>GOLD</option>
                      <option>GRATUITO</option>
                  </select>
             </div>
             <div class="form-group col-md-6">
               <label > Sitio Web</label>
               <input class="form-control" id="txtSitioWeb" type="text" name="SitioWeb" 
               placeholder="Sitio Web" name="SitioWeb">
             </div>

              <div class="form-group col-md-6">
              <label > Foto de Perfil&nbsp;</label>
              <input type="file" name="FotoPerfil" id="txtFotoPerfil">
              </div>

              <div id="id-error" style="color:red;">
              <label for="name" class="error" generated="true" ></label>
             </div>
           </div>

            <p></p><p></p>
           <div class="modal-footer">
          <!-- === BOTONES === -->  
            <button type="submit" id="Guardar" class="btn btn-lg btn-info">Guardar</button>
            <button type="submit" id="Modificar" class="btn btn-lg btn-info">Modificar</button>
            <button type="submit" id="Eliminar" class="btn btn-lg btn-info">Eliminar</button>
            <button type="button" class="btn btn-lg btn-info" data-dismiss="modal">Cerrar</button>
             <!-- === FIN BOTONES === -->  
         </div>
      </div>
    </div>
       <!-- === FIN MODAL === -->
    </div>


        </div>
    <!-- === FIN CONTENIDO DE LA VENTANA === -->
  </form>

         <div class="panel panel-primary">
         <div class="panel-body">
           <p>
          <!-- === BOTONES === -->  
            <div class="form-group col-md-6" style="margin-top:10px" align="center">
                 <!-- === BOTONES DE ACCION === -->  
                 <button type="button" class="btn btn-lg btn-info" data-toggle="modal" 
                          data-target="#ModalNewCustomer">Agregar Nuevo Cliente</button>
                 <button type="button" class="btn btn-lg btn-info">Salir</button>
               </div>
             <!-- === FIN BOTONES === -->  
          </p>
        </div>
      </div>
          </div>
  
 
