                      <label> Usuario</label>
                       <select class="form-control" id="cmbUsuario" name="Usuario">
                      </select>
                    </div>
                               
                    <div class="form-group col-md-6">
                      <label> Tipo de Rol</label>
                      <select class="form-control" id="cmbRol" name="Rol">
                      </select>
                    </div>

                    <label for="ejemplo_text_1"></label>
                     <input class="form-control" type="text"  style="visibility:hidden" 
                            name="IdUsuarioRol" id="txtIdUsuarioRol"/>

                    <div id="id-error" style="color:red;">
                      <label for="name" class="error" generated="true" ></label>
                    </div>

                    <p></p><p></p>
           
                    <div class="modal-footer">
                  <!-- === BOTONES === -->  
                    <button type="submit" id="Guardar" class="btn btn-lg btn-info">Guardar</button>
                    <button type="button" class="btn btn-lg btn-info" data-dismiss="modal">Cerrar</button>
                     <!-- === FIN BOTONES === -->  
                   </div>
                  </div>
                </div>
               </div>
       <!-- === FIN MODAL === -->
              </div>
           </div>
