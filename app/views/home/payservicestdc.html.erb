
   <!-- === INICIO CONTENIDO DE LA VENTANA === -->
   <div id="page-content-wrapper">
     <div class="container-fluid">
      <div class="row">
<form role="form" id="form" data-toggle="validator">
        <!-- === INICIO PANEL DE EDICIÓN === -->   
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Pagar un nuevo servicio con Tarjeta de Crédito</h3>
          </div>
          <div class="panel-body">
            Por favor indica todos tus datos bancarios de tu tarjeta de crèdito para pagar por el servicio


             <!-- === INPUTS TXT === -->  

              <div class="form-group">
              <label for="ejemplo_text_1">Seleccione el banco</label>
              <select name="Bank" id="cmbBank" class="form-control" >
                  
              </select>
            </div>
             <div class="form-group">
              <label for="ejemplo_text_1">Codigo de la Tarjeta</label>
              <input class="form-control" type="text" name="codtdc" id="txtCodTDC"  placeholder="Numero impreso en la tarjeta"/>
              <div id="id-error" style="color:red;">
    <label for="name" class="error" generated="true" ></label>

</div>
              </div>
             
             <div class="form-group">
              <label for="ejemplo_text_1">Nombre Impreso en la Tarjeta</label>
              <input type="text" class="form-control" name="nametdc" id="txtNameTDC" placeholder="Nombre del dueño de la tarjeta" />
            </div>
            <div class="form-group">
              <label for="ejemplo_text_1">Cedula del dueño de la Tarjeta</label>
              <input type="text" class="form-control" name="codcustomer" id="txtCodCustomer" placeholder="Cedula del dueño de la tarjeta" />
            </div>
              <div class="form-group">
              <label for="ejemplo_text_1">Fecha de Expiración</label>
              <input type="text" class="form-control" name="expireDate" id="txtExpireDate" placeholder="Fecha de vencimiento de la tarjeta" />

                <div class="form-group">
              <label for="ejemplo_text_1">Modelo de la Tarjeta</label>
              <select name="modelcard" id="cmbModelCard" class="form-control" >
                    <option>VISA</option>
                    <option>MASTERCARD</option>                  
              </select>

              <div class="form-group">
              <label for="ejemplo_text_1">Codigo de Seguridad</label>
              <input type="text" class="form-control" name="securityCode" id="txtSecurityCode" placeholder="Impreso en la parte posterior de la tarjeta" />
            </div>
               <div class="form-group">
              <label for="ejemplo_text_1">Monto</label>
              <input type="text" class="form-control" name="mount" id="txtMonto" placeholder="Monto de la Operación" />
            </div>
            <label for="ejemplo_text_1"></label>
              <input class="form-control" type="text"  style="visibility:hidden" name="Idn" id="txtIdn"/>

         </div>

          <!-- === BOTONES === -->  
            <button type="submit" id="Guardar" class="btn btn-lg btn-success">PAGAR</button>
           
             <!-- === FIN BOTONES === -->  
          
        </div>
       
    </div>
    <!-- === FIN CONTENIDO DE LA VENTANA === -->
  </form>

  </div>
</div>
</div>
<!-- === FIN CONTENIDO DE LA VENTANA === -->

